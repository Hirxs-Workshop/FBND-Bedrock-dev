		"components": {
			"tag:changeable": {},
			"minecraft:liquid_detection": {
				"detection_rules": [
						{
							   "liquid_type": "water",
							"can_contain_liquid": true,
							"stops_liquid_flowing_out_from_direction": [
								   "up",
